<div id="mycart" class="small-10 small-centered medium-8 large-8 column">
  
  <div class="p1 glassy-bg mb1 text-center radius-l1 radius-r1">
    <h4>My Plate</h4>
    <% if @plate.item_count > 0 %>
    	<p class="mb0"> You've selected <span class="cart-count"><%= @plate.item_count %></span> pancakes!</p>
    <% else %>
    	<p class="mb0"> Your plate is empty! Put some pancakes on it! </p>
    <% end %>
  </div>

  <% if @plate.item_count > 0 %>
	  <% @plate.plate_contents.each do |pancake| %>
	  <div data-equalizer class="cart-pancake large-12 column mb1">
	    <div class="column large-2 text-center p0" data-equalizer-watch>
	      <%= pancake[:pancake_id] %><br>
	    </div>
	    <div class="column large-7 glassy-bg text-center" data-equalizer-watch>
	      <%= pancake[:quantity] %><br> at
	    </div>
	    <div class="column large-3 primary-bg text-center radius-r1" data-equalizer-watch>
	      $<%= pancake[:price] %> each = $<%= (pancake[:quantity].to_f * pancake[:price]).round(2) %>
	        <i class="fi-x right"></i>
	      <buttom class="increase-quantity">Plus</buttom>
	      <buttom class="decrease-quantity">Minus</buttom>
	      <buttom class="empty">Empty Plate</buttom>
	    </div>
	  </div>
	  <% end %>
	  <button class="place-order">Place Order</button>
  <% end %>

</div>